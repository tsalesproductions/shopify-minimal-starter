<div class="container mx-auto px-4 py-12">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-center mb-8">{{ page.title }}</h1>

    {% if page.content != blank %}
      <div class="prose max-w-none mb-12">
        {{ page.content }}
      </div>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <div>
        <h2 class="text-2xl font-semibold mb-4">Informações de Contato</h2>
        <ul class="space-y-4">
          {% if settings.contact_address != blank %}
            <li class="flex items-start">
              <i class="fas fa-map-marker-alt mt-1 mr-3 text-gray-600"></i>
              <div>
                <h3 class="font-medium">Endereço</h3>
                <p class="text-gray-600">{{ settings.contact_address }}</p>
              </div>
            </li>
          {% endif %}
          {% if settings.contact_phone != blank %}
            <li class="flex items-start">
              <i class="fas fa-phone-alt mt-1 mr-3 text-gray-600"></i>
              <div>
                <h3 class="font-medium">Telefone</h3>
                <p class="text-gray-600">{{ settings.contact_phone }}</p>
              </div>
            </li>
          {% endif %}
          {% if settings.contact_email != blank %}
            <li class="flex items-start">
              <i class="fas fa-envelope mt-1 mr-3 text-gray-600"></i>
              <div>
                <h3 class="font-medium">Email</h3>
                <p class="text-gray-600">{{ settings.contact_email }}</p>
              </div>
            </li>
          {% endif %}
          {% if settings.contact_whatsapp != blank %}
            <li class="flex items-start">
              <i class="fab fa-whatsapp mt-1 mr-3 text-gray-600"></i>
              <div>
                <h3 class="font-medium">WhatsApp</h3>
                <a href="https://wa.me/{{ settings.contact_whatsapp | remove: '(' | remove: ')' | remove: ' ' | remove: '-' }}" class="text-gray-600 hover:text-black transition" target="_blank">{{ settings.contact_whatsapp }}</a>
              </div>
            </li>
          {% endif %}
        </ul>
      </div>
      <div>
        <h2 class="text-2xl font-semibold mb-4">Envie uma Mensagem</h2>
        {%- form 'contact', id: 'ContactForm', class: 'space-y-4' -%}
          {%- if form.posted_successfully? -%}
            <p class="text-green-600 bg-green-100 p-4 rounded-md">
              {{ 'templates.contact.form.post_success' | t }}
            </p>
          {%- endif -%}
          {%- if form.errors -%}
            <div class="text-red-600 bg-red-100 p-4 rounded-md">
              <h2 class="font-medium">{{ 'templates.contact.form.error_heading' | t }}</h2>
              <ul class="list-disc list-inside">
                {%- for field in form.errors -%}
                  <li>
                    <span>{{ form.errors.translated_fields[field] | capitalize }}</span>
                    {{ form.errors.messages[field] }}
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          {%- endif -%}

          <div>
            <label for="ContactForm-name" class="block text-sm font-medium text-gray-700 sr-only">Nome</label>
            <input type="text" id="ContactForm-name" name="contact[name]" placeholder="Nome" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-black focus:border-black">
          </div>
          <div>
            <label for="ContactForm-email" class="block text-sm font-medium text-gray-700 sr-only">Email</label>
            <input type="email" id="ContactForm-email" name="contact[email]" placeholder="Email" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-black focus:border-black">
          </div>
          <div>
            <label for="ContactForm-body" class="block text-sm font-medium text-gray-700 sr-only">Mensagem</label>
            <textarea id="ContactForm-body" name="contact[body]" placeholder="Sua mensagem" rows="5" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-black focus:border-black"></textarea>
          </div>
          <div>
            <button type="submit" class="w-full bg-black text-white py-3 px-6 rounded-md hover:bg-gray-800 transition">
              Enviar Mensagem
            </button>
          </div>
        {%- endform -%}
      </div>
    </div>
  </div>
</div>

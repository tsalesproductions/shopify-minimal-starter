<nav class="flex items-center justify-center space-x-1">
  {%- if paginate.previous -%}
    <a
      href="{{ paginate.previous.url }}"
      class="px-4 py-2 text-gray-500 hover:text-black hover:bg-gray-100 rounded-md"
      aria-label="{{ 'general.pagination.previous' | t }}"
    >
      <i class="fas fa-chevron-left"></i>
    </a>
  {%- else -%}
    <span class="px-4 py-2 text-gray-300 cursor-not-allowed" aria-hidden="true">
      <i class="fas fa-chevron-left"></i>
    </span>
  {%- endif -%}

  {%- for part in paginate.parts -%}
    {%- if part.is_link -%}
      <a
        href="{{ part.url }}"
        class="px-4 py-2 text-gray-700 hover:text-black hover:bg-gray-100 rounded-md"
        aria-label="{{ 'general.pagination.page' | t: number: part.title }}"
      >
        {{- part.title -}}
      </a>
    {%- else -%}
      {%- if part.title == paginate.current_page -%}
        <span
          class="px-4 py-2 bg-black text-white font-bold rounded-md"
          aria-current="page"
          aria-label="{{ 'general.pagination.page' | t: number: part.title }}"
        >
          {{- part.title -}}
        </span>
      {%- else -%}
        <span class="px-4 py-2">{{ part.title }}</span>
      {%- endif -%}
    {%- endif -%}
  {%- endfor -%}

  {%- if paginate.next -%}
    <a
      href="{{ paginate.next.url }}"
      class="px-4 py-2 text-gray-500 hover:text-black hover:bg-gray-100 rounded-md"
      aria-label="{{ 'general.pagination.next' | t }}"
    >
      <i class="fas fa-chevron-right"></i>
    </a>
  {%- else -%}
    <span class="px-4 py-2 text-gray-300 cursor-not-allowed" aria-hidden="true">
      <i class="fas fa-chevron-right"></i>
    </span>
  {%- endif -%}
</nav>

<a href="{{ product.url }}" class="product-card w-1/4 min-w-[16rem] max-w-xs bg-white rounded-lg overflow-hidden shadow-sm flex-shrink-0">
    <div class="h-36 sm:h-48 md:h-64 flex items-center justify-center">
        {% if product.featured_image %}
            <img
                src="{{ product.featured_image | img_url: 'medium' }}"
                alt="{{ product.title }}"
                class="w-full h-full object-contain"
            >
        {% else %}
            <svg class="w-16 h-16 text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 5v14H5V5h14m0-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"></path>
                <path d="M14.5 11c.83 0 1.5-.67 1.5-1.5S15.33 8 14.5 8 13 8.67 13 9.5s.67 1.5 1.5 1.5zm-5 2.5c0 .83.67 1.5 1.5 1.5s1.5-.67 1.5-1.5-.67-1.5-1.5-1.5-1.5.67-1.5 1.5zm9 2.5c-.55 0-1.05-.22-1.41-.59-.36-.36-.59-.86-.59-1.41 0-1.1.9-2 2-2s2 .9 2 2-.9 2-2 2z"></path>
            </svg>
        {% endif %}
    </div>
    <div class="p-4">
        <h3 class="font-medium">{{ product.title }}</h3>
        {% if product.tags.size > 0 %}
            <p class="text-sm text-gray-500 mb-2">{{ product.tags | join: ', ' }}</p>
        {% endif %}

        {% render 'price', product: product %}
        {% render 'whatsapp-btn' product: product %}
    </div>
</a>
{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "store_description",
      "label": "Descrição da loja",
      "default": "Acessórios premium que combinam estilo, conforto e tecnologia para o melhor amigo do homem."
    },
    {
      "type": "text",
      "id": "address",
      "label": "Endereço",
      "default": "Av. Paulista, 1000, São Paulo - SP"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Telefone",
      "default": "(11) 99999-9999"
    },
    {
      "type": "text",
      "id": "email",
      "label": "E-mail",
      "default": "contato@doggyshine.com"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL",
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL",
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL",
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL",
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}

<!-- Footer -->
<footer class="bg-black text-white pt-12 pb-6">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <div>
        <h3 class="text-xl font-bold mb-4">{{ settings.store_name }}</h3>
        <p class="text-gray-400 mb-4">
          {{ section.settings.store_description }}
        </p>
        <div class="flex space-x-4">
            {% if settings.facebook_url %}
            <a href="{{ settings.facebook_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-facebook-f"></i>
            </a>
            {% endif %}
            {% if settings.instagram_url %}
            <a href="{{ settings.instagram_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-instagram"></i>
            </a>
            {% endif %}
            {% if settings.twitter_url %}
            <a href="{{ settings.twitter_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-twitter"></i>
            </a>
            {% endif %}
            {% if settings.pinterest_url %}
            <a href="{{ settings.pinterest_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-pinterest"></i>
            </a>
            {% endif %}
            {% if settings.youtube_url %}
            <a href="{{ settings.youtube_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-youtube"></i>
            </a>
            {% endif %}
            {% if settings.tiktok_url %}
            <a href="{{ settings.tiktok_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-tiktok"></i>
            </a>
            {% endif %}
            {% if settings.linkedin_url %}
            <a href="{{ settings.linkedin_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-linkedin"></i>
            </a>
            {% endif %}
            {% if settings.telegram_url %}
            <a href="{{ settings.telegram_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-telegram"></i>
            </a>
            {% endif %}
        </div>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-4">Links Rápidos</h3>
        <ul class="space-y-2">
          {%- for link in linklists.footer.links -%}
            <li>
              <a href="{{ link.url }}" class="text-gray-400 hover:text-white transition" {% if link.active %}aria-current="page"{% endif %}>
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-4">Categorias</h3>
        <ul class="space-y-2">
          {%- for link in linklists.main-menu.links -%}
            <li>
              <a href="{{ link.url }}" class="text-gray-400 hover:text-white transition" {% if link.active %}aria-current="page"{% endif %}>
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-4">Contato</h3>
        <ul class="space-y-2">
            {% if settings.contact_address %}
            <li class="flex items-start">
            <i class="fas fa-map-marker-alt mt-1 mr-3 text-gray-400"></i>
            <span class="text-gray-400">{{ settings.contact_address }}</span>
            </li>
            {% endif %}
            {% if settings.contact_phone %}
            <li class="flex items-center">
            <i class="fas fa-phone-alt mr-3 text-gray-400"></i>
            <span class="text-gray-400">{{ settings.contact_phone }}</span>
            </li>
            {% endif %}
            {% if settings.contact_email %}
            <li class="flex items-center">
            <i class="fas fa-envelope mr-3 text-gray-400"></i>
            <span class="text-gray-400">{{ settings.contact_email }}</span>
            </li>
            {% endif %}
            {% if settings.contact_whatsapp %}
            <li class="flex items-center">
            <i class="fab fa-whatsapp mr-3 text-gray-400"></i>
            <span class="text-gray-400">{{ settings.contact_whatsapp }}</span>
            </li>
            {% endif %}
        </ul>
      </div>
    </div>

    <div class="pt-8 border-t border-gray-800 text-center text-gray-400 text-sm">
      <p>© {{ 'now' | date: '%Y' }} {{ settings.store_name }}. Todos os direitos reservados.</p>
    </div>
  </div>
</footer>

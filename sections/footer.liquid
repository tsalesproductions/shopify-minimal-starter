{% schema %}
{
  "name": "Footer",
  "settings": [
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}

<!-- Footer -->
<footer class="bg-black text-white pt-12 pb-6">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <div>
        <h3 class="text-xl font-bold mb-4">{{ settings.store_name }}</h3>
        <p class="text-gray-400 mb-4">
          {{ settings.store_description }}
        </p>
        <div class="flex space-x-4">
            {% if settings.facebook_url != blank %}
            <a href="{{ settings.facebook_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-facebook-f"></i>
            </a>
            {% endif %}
            {% if settings.instagram_url != blank %}
            <a href="{{ settings.instagram_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-instagram"></i>
            </a>
            {% endif %}
            {% if settings.twitter_url != blank %}
            <a href="{{ settings.twitter_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-twitter"></i>
            </a>
            {% endif %}
            {% if settings.pinterest_url != blank %}
            <a href="{{ settings.pinterest_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-pinterest"></i>
            </a>
            {% endif %}
            {% if settings.youtube_url != blank %}
            <a href="{{ settings.youtube_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-youtube"></i>
            </a>
            {% endif %}
            {% if settings.tiktok_url != blank %}
            <a href="{{ settings.tiktok_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-tiktok"></i>
            </a>
            {% endif %}
            {% if settings.linkedin_url != blank %}
            <a href="{{ settings.linkedin_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-linkedin"></i>
            </a>
            {% endif %}
            {% if settings.telegram_url != blank %}
            <a href="{{ settings.telegram_url }}" class="text-gray-400 hover:text-white transition">
              <i class="fab fa-telegram"></i>
            </a>
            {% endif %}
        </div>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-4">Links Rápidos</h3>
        <ul class="space-y-2">
          {%- for link in linklists.footer.links -%}
            <li>
              <a href="{{ link.url }}" class="text-gray-400 hover:text-white transition" {% if link.active %}aria-current="page"{% endif %}>
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-4">Categorias</h3>
        <ul class="space-y-2">
          {%- for link in linklists.main-menu.links -%}
            <li>
              <a href="{{ link.url }}" class="text-gray-400 hover:text-white transition" {% if link.active %}aria-current="page"{% endif %}>
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-4">Contato</h3>
        <ul class="space-y-2">
            {% if settings.contact_address != blank %}
            <li class="flex items-start">
            <i class="fas fa-map-marker-alt mt-1 mr-3 text-gray-400"></i>
            <span class="text-gray-400">{{ settings.contact_address }}</span>
            </li>
            {% endif %}
            {% if settings.contact_phone != blank %}
            <li class="flex items-center">
            <i class="fas fa-phone-alt mr-3 text-gray-400"></i>
            <span class="text-gray-400">{{ settings.contact_phone }}</span>
            </li>
            {% endif %}
            {% if settings.contact_email != blank %}
            <li class="flex items-center">
            <i class="fas fa-envelope mr-3 text-gray-400"></i>
            <span class="text-gray-400">{{ settings.contact_email }}</span>
            </li>
            {% endif %}
        </ul>
      </div>
    </div>

    <div class="pt-8 border-t border-gray-800 text-center text-gray-400 text-sm">
      <p>© {{ 'now' | date: '%Y' }} {{ settings.store_name }}. Todos os direitos reservados.</p>
    </div>
  </div>
</footer>

    <div class="p-5">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-xl font-bold">Menu</h2>
            <button id="close-menu" class="text-black">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        
        <nav class="space-y-4">
            {%- for link in linklists.main-menu.links -%}
              <a href="{{ link.url }}" class="block py-2 hover:text-gray-600 transition" {% if link.active %}aria-current="page"{% endif %}>
                {{ link.title }}
              </a>
            {%- endfor -%}
            
            <div class="pt-4 mt-4 border-t border-gray-200">
                <a href="https://dsclub.doggyshine.com.br/" class="flex items-center justify-between bg-black text-white py-3 px-4 rounded-lg hover:bg-gray-800 transition">
                    <span>DSClub</span>
                    <span class="crown-icon">ðŸ‘‘</span>
                </a>
                <p class="text-xs text-gray-500 mt-2">Assine e ganhe benefÃ­cios exclusivos!</p>
            </div>
        </nav>
    </div>
</div>

<!-- Cart Sidebar -->
<div id="cart-sidebar" class="cart-sidebar fixed top-0 right-0 h-full w-80 bg-white shadow-lg z-50 transform translate-x-full">
    <div class="p-5 h-full flex flex-col cart-container">
        {% render 'minicart' %}
    </div>
</div>

<!-- Overlay -->
<div id="overlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden"></div>
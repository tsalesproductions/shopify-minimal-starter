<!-- Header -->
<header class="bg-white shadow-sm">
    <div class="container mx-auto px-4 py-3 flex items-center justify-between">
        <!-- Mobile menu button - Now more visible -->
        <button id="menu-button" class="lg:hidden menu-button">
            <i class="fas fa-bars text-xl"></i>
        </button>
        
        <!-- Logo -->
        <div class="flex-1 lg:flex-none text-center lg:text-left">
            <a href="/" class="text-2xl font-bold tracking-tighter">
                <span class="text-black">Doggy</span><span class="text-gray-600">Shine</span>
            </a>
        </div>
        
        <!-- Desktop Navigation -->
        <nav class="hidden lg:flex items-center space-x-8">
          {%- for link in linklists.main-menu.links -%}
            <a href="{{ link.url }}" class="font-medium hover:text-gray-600 transition" {% if link.active %}aria-current="page"{% endif %}>
              {{ link.title }}
            </a>
          {%- endfor -%}
        </nav>
        
        <!-- Search, Account, Cart -->
        <div class="flex items-center space-x-4">
            <div class="hidden md:block relative">
                <form action="/search" method="get" class="relative">
                  <input 
                    type="text" 
                    name="q" 
                    placeholder="Buscar produtos..." 
                    class="pl-10 pr-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:ring-1 focus:ring-black focus:border-black text-sm w-48 lg:w-64"
                    value="{{ search.terms | escape }}"
                  >
                  <button type="submit" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
                    <i class="fas fa-search"></i>
                  </button>
                </form>
            </div>
            <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" class="text-black hover:text-gray-600 transition" aria-label="Account">
                <i class="fas fa-user text-xl"></i>
            </a>
            <button id="cart-button" class="text-black hover:text-gray-600 transition relative">
                <i class="fas fa-shopping-bag text-xl"></i>
                <span class="absolute -top-2 -right-2 bg-black text-white text-xs rounded-full h-5 w-5 flex items-center justify-center" data-cart-qtd>{{ cart.item_count }}</span>
            </button>
        </div>
    </div>
    
    <!-- Mobile search bar -->
    <div class="px-4 py-2 lg:hidden">
      <form action="/search" method="get" class="relative">
        <input 
          type="text" 
          name="q" 
          placeholder="Buscar produtos..." 
          class="w-full pl-10 pr-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:ring-1 focus:ring-black focus:border-black text-sm"
          value="{{ search.terms | escape }}"
        >
        <button type="submit" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
          <i class="fas fa-search"></i>
        </button>
      </form>
    </div>
</header>


<!-- Sidebar Menu -->

<!-- DSClub Banner -->
<section class="py-12 bg-black text-white">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center">
            <div class="md:w-1/2 mb-8 md:mb-0">
                <h2 class="text-3xl font-bold mb-4">{{ section.settings.title }}</h2>
                <p class="text-lg mb-6">{{ section.settings.description }}</p>
                <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-4">
                    <a href="{{ section.settings.cta_link_1 }}" class="bg-white text-black px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition text-center">
                        Conheça os planos
                    </a>
                    <a href="{{ section.settings.cta_link_2 }}" class="border border-white px-6 py-3 rounded-lg font-medium hover:bg-white hover:text-black transition text-center">
                        Saiba mais
                    </a>
                </div>
            </div>
            <div class="md:w-1/2 flex justify-center">
                <div class="w-64 h-64 bg-gray-800 rounded-full flex items-center justify-center">
                    <div class="text-center">
                        <i class="fas fa-crown text-4xl mb-4 text-yellow-400"></i>
                        <h3 class="text-xl font-bold">{{ section.settings.title }}</h3>
                        <p class="text-sm mt-2">{{ section.settings.text }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Hero DSClub",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "DSClub"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descrição",
      "default": "Assine nosso clube e receba todo mês produtos exclusivos para seu pet. Benefícios especiais, descontos e muito mais!"
    },
    {
      "type": "url",
      "id": "cta_link_1",
      "label": "Link do botão 'Conheça os planos'",
    },
    {
      "type": "url",
      "id": "cta_link_2",
      "label": "Link do botão 'Saiba mais'",
    },
    {
        "type": "text",
        "id": "subtitle",
        "label": "Subtítulo",
        "default": "Exclusividade para seu pet"
    }
  ],
  "presets": [
    {
      "name": "Hero DSClub",
      "category": "Seções"
    }
  ]
}
{% endschema %}
{%- layout none -%}

{%- assign request_path = request.path | split: '/' -%}

{%- assign page_url = content_for_header | split:'"pageurl":"' | last | split:'"' | first | split: request.host | last | replace:'\/','/' | replace:'%20',' ' | replace:'\u0026','&'  -%}
{% assign param = blank %}

{%- for i in (1..1) -%}

  {%- unless page_url contains "?" -%}{% break %}{%- endunless -%}
  {%- assign query_string = page_url | split:'?' | last -%}
  {%- assign qry_parts= query_string | split:'&' -%}

  {%- for part in qry_parts -%}
    {%- assign key_and_value = part | split:'=' -%}
    {%- if key_and_value.size > 1 -%}
      {% if key_and_value[0] == 'param' %}
        {% assign param = key_and_value[1] %}
      {% endif %}
    {%- endif -%}
  {%- endfor -%}
{%- endfor -%}

{%- assign variant_id = page_url | split: '&' | last | split: '=' | last | remove: '\r' | remove: '\n' | remove: '\t' | remove: ' ' | remove: '"' | remove: "'" | remove: '/' | remove: '\\' | replace: '%20', ' ' | replace: '%26', '&' | replace: 'r%5B', '' | replace: '%5D', '' | remove: 'r' | remove: '[' | remove: ']' -%}
{%- assign selected_variant = product.variants | where: "id", variant_id | first -%}

{% render 'price', product: product, pdp: true, variant: selected_variant %}